@using BOL;
@using MVCCRUDWeb.Controllers;

@{
    ViewData["Title"] = "Student List";
}

<div class="text-center">
    <h1 class="display-4">Student List</h1>
    <p>@{
        List<Student> stlist = ViewData["slist"] as List<Student>;
        <table class="table table-dark">
            <thead>
                <tr>
                <th> Student ID</th>
                <th> Name</th>
                <th> Password</th>
                <th> City</th>
                <th> View</th>
                </tr>
            </thead>
        
        @foreach(var s in stlist){
            <tbody>
                <tr>
                <td> @s.id</td>
                <td> @s.name</td>
                <td> @s.password</td>
                <td> @s.city</td>
                <td> <a href="/Student/ParticularView/@s.id">View Student</a></td>
                </tr>
            </tbody>
        }
        </table>
    }
    </p>
</div>

<br>

<input type="button" class="btn btn-primary" value="Insert" onclick="window.location= '@Url.Action("Insert", "Student")'" />

<input type="button" class="btn btn-primary" value="Delete" onclick="window.location='@Url.Action("Delete","Student")'"/>

<input type="button" value="Update" class="btn btn-primary" onclick="window.location='@Url.Action("UpdateID","Student")'"/>